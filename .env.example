# 应用配置
APP_NAME=Real AI Backend
APP_VERSION=0.1.0
DEBUG=false

# API 配置
API_V1_PREFIX=/api/v1

# CORS 配置 (逗号分隔)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///./real_ai.db

# Redis 配置 (可选)
REDIS_URL=redis://localhost:6379/0

# JWT 配置
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenRouter API 配置
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions

# 阿里云语音服务配置
# 获取方式: https://ram.console.aliyun.com/manage/ak
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
# 语音服务 AppKey: https://nls-portal.console.aliyun.com/applist
ALIYUN_SPEECH_APP_KEY=your-aliyun-speech-app-key
