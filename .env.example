# 应用配置
APP_NAME=Real AI Backend
APP_VERSION=0.1.0
DEBUG=false

# API 配置
API_V1_PREFIX=/api/v1

# CORS 配置 (逗号分隔)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///./real_ai.db

# Redis 配置 (可选)
REDIS_URL=redis://localhost:6379/0

# JWT 配置
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenRouter API 配置
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions

# 阿里云语音服务配置 (旧版 NLS，可选)
# 获取方式: https://ram.console.aliyun.com/manage/ak
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
# 语音服务 AppKey: https://nls-portal.console.aliyun.com/applist
ALIYUN_SPEECH_APP_KEY=your-aliyun-speech-app-key

# 阿里云 DashScope 语音识别配置 (推荐)
# 获取 API Key: https://help.aliyun.com/zh/model-studio/get-api-key
DASHSCOPE_API_KEY=your-dashscope-api-key
# 北京地域 (默认): wss://dashscope.aliyuncs.com/api-ws/v1/inference
# 新加坡地域: wss://dashscope-intl.aliyuncs.com/api-ws/v1/inference
DASHSCOPE_WEBSOCKET_URL=wss://dashscope.aliyuncs.com/api-ws/v1/inference
